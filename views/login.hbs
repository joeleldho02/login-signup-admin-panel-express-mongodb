<head>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/css/login.css">
    <style>
        .bg-transparent {
            background: transparent;
        }

        .btn a {
            color: rgb(138, 54, 54);
        }

        .navbar a:hover,
        .btn a:hover {
            text-decoration: none;
        }

        .navbar button {
            background-color: #dacaca;
            font-weight: 700;
            font-size: 13px;
        }

        .navbar button:hover {
            background-color: rgb(78, 22, 22);
            color: rgb(255, 255, 255)
        }
    </style>
</head>

<body {{#if adminLogin}} style="background-color: rgb(56, 52, 52);
                overflow: hidden;" {{/if}}>

    <nav class="navbar navbar-light bg-transparent">
        <h2></h2>
        <a href="/admin/login">
            <button class="btn mx-5 p-2" {{#if adminLogin}} style="visibility: hidden;" {{/if}}>
                Admin Login
            </button>
        </a>
    </nav>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section"></h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5 rounded-3">
                        <div class="img d-flex align-items-center justify-content-center">
                            <img src="https://cdn-icons-png.flaticon.com/512/295/295128.png">
                        </div>
                        <h5 class="text-center mb-0 text-white">
                            {{#if adminLogin}}
                            ADMIN LOGIN
                            {{else}}
                            WELCOME
                            {{/if}}
                        </h5>
                        <p class="text-center text-white-50">
                            Sign in by entering the information below
                        </p>
                        <form class="login-form px-md-5" name="loginForm" role="form" id="loginForm" method='POST' {{#if
                            adminLogin}} action="/admin/login" {{else}} action="/login" {{/if}}>
                            <div class="form-group finput d-flex">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="fa fa-envelope text-white"></span>
                                </div>
                                <input type="text" class="form-control my-2 mx-2" id="email" name="email"
                                    placeholder="Email" />
                                <div class="error"></div>
                            </div>
                            <div class="form-group finput d-flex mt-3">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="fa fa-lock text-white"></span>
                                </div>
                                <input type="password" class="form-control my-2 mx-2" id="password" name="password"
                                    placeholder="Password" autocomplete="on" />
                                <div class="error"></div>
                            </div>
                            <div class="my-2 form-group d-flex justify-content-center">
                                <div id="loading" class="spinner-border text-primary"></div>
                            </div>
                            <div class="form-group mt-4 mb-2">
                                <button id="btn-submit" type="submit"
                                    class="btn form-control btn-primary text-white rounded submit px-3 ">
                                    LOGIN
                                </button>
                            </div>
                            {{#if err}}
                            <div class="text-center">
                                <h5 class="text-danger h5">{{errMsg}}</h5>
                            </div>
                            {{/if}}
                        </form>
                        {{#unless adminLogin}}
                        <div class="w-100 text-center mt-4 text text-white">
                            <p class="mb-0 text-white-50">Don't have an account?</p>
                            <a href="/signup" class="text-pink">SIGN UP</a>
                        </div>
                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="/js/validate-login.js"></script>
</body>